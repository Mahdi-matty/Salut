<p style="color:aliceblue"></p>
<div class="tweets">
  <ul class="list-group">

    <span><img src="{{User.profilePic}}" width="60" height="60" style="border-radius: 50%" /> {{User.username}}</span>
    {{#each (processTitle title) as |wordObj|}}
    {{!-- <a href="/api/posts/search?tag={{wordObj.word}}" class="list-group-item">{{wordObj.word}}</a> --}}
    {{/each}}
    <div class="list-group-item">

      {{title}}
    </div>
    <h6 class="idInNeed" style="display: none;">{{id}}</h6>
    {{#if imageSource}}
    <li class="list-group-item"><img src="{{imageSource}}" width="100%" height="100%" /></li>

    {{/if}}
    <li class="list-group-item">{{content}}</li>

    <li class="list-group-item">
      <h6>Comments:</h6>
      <ul class="commentsList">
        {{#each comments as |comment|}}
        <li>
          <span>{{comment.user}}:</span> {{comment.text}}
          <button type="button" class="btn btn-primary btn-sm replyBtn">Reply</button>
          <ul class="repliesList">
            {{#each comment.replies as |reply|}}
            <li><span>{{reply.user}}:</span> {{reply.text}}</li>
            {{/each}}
          </ul>
          <form class="replyForm" style="display: none;">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Add a reply..." />
              <button type="submit" class="btn btn-primary btn-sm">Reply</button>
            </div>
          </form>
        </li>
        {{/each}}
      </ul>
      <style>
        .like-btn {
          background-color: #57BEE6;
          color: #222121;
          height: 36px;
          width: 50px;
          border-radius: 2px;
          cursor: pointer;
          border: none;
          border-radius: 5px;
        }

        .delete-btn {
          background-color: #57BEE6;
          color: #222121;
          height: 36px;
          width: 60px;
          border-radius: 2px;
          cursor: pointer;
          border: none;
          border-radius: 5px;
        }

        .like-btn:hover {
          background-color: #e657c2;
        }

        .delete-btn:hover {
          background-color: #e657c2;
        }

        .profile {
          background-color: orange;
          width: 60%;
          padding: 20px;
          border-radius: 5px;
        }

        .list-group-item {
          border-radius: 8px;
        }
      </style>
      <form class="commentForm">
        <div class="form-group">
          <input type="text" class="form-control" id="commentId" placeholder="Add a comment..." />
          <button type="submit" class="btn btn-primary btn-sm">Comment</button>
        </div>
      </form>
    </li>

    {{!-- <p class="likeCount"></p> --}}
    {{!-- <button type="button" class="btn btn-primary btn-sm deleteBtn">Delete</button> --}}
    <br>
  </ul>
    <button class="like-btn likeBtn" id="likeBtn">Like</button>
    <button class="delete-btn deleteBtn" id="deleteBtn">Delete</button>
</div>

<style>
  .tweets {
    padding-left: 5px;
    padding-right: 5px;
    background-color: #84c0da;
    margin-left: 30px;
    margin-right: 30px;
  }
</style>