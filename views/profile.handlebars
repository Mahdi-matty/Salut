<section class="d-flex bd-highlight flex-column mb-3">

<div class="p-2 bd-highlight">
<h2 class="userNome" style="color:white">{{users.username}}</h2>

  <div class="input-group mb-3">
    <button class="btn btn-outline-secondary usersearchBtn" type="button" id="button-addon1">Search</button>
    <input type="text" class="form-control" id="searchData" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
  </div>

  <button id="followBtn">
    <img class="profilePic" width="160" height="160"/>
  </button>
</div>


<div class="p2">
  <button id="upload_widget" class="cloudinary-button">Update Profile Picture
  <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  

